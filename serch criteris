var baseFilters = [
    // filter by customer
    search.createFilter({
        name: 'entity',                      // transaction's entity (customer)
        operator: search.Operator.ANYOF,
        values: String(cname)
    }),

    // filter by currency
    search.createFilter({
        name: 'currency',
        operator: search.Operator.ANYOF,
        values: String(currency)
    }),

    // customer last statement date (joined to customer)
    search.createFilter({
        name: 'custentity_upaya_last_statement_date',
        join: 'customer',                    // <-- join, not in the name
        operator: search.Operator.NOTON,
        values: 'today'
    }),

    // customer email notif (joined to customer)
    search.createFilter({
        name: 'custentity_2663_email_address_notif',
        join: 'customer',
        operator: search.Operator.ISNOTEMPTY
    })
];
